{
  // Change this to match your project
  "include": [
    "src/**/*"
  ],
  "exclude": [],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "target": "esNext"
  }
}